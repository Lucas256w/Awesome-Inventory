extends layout

block content

  h1 #{title}

  form(method= req_type)
    div.form-group
      label(for='name') Category:
      input#name(type='text', name='name' required value=(undefined===category ? '' : category.name) )
    div.form-group
      label(for='description') Description:
      textarea#description(name="description", cols="30", rows="10" required value=(undefined===category ? '' : category.description)) 
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg