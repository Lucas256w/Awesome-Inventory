extends layout

block content

  h1 #{title}

  form(method= "POST")
    div.form-group
      label(for='name') Category:
      input#name(type='text', name='name', required, value=(undefined === category ? '' : category.name))
    div.form-group
      label(for='description') Description:
      textarea(name="description", cols="30", rows="10", required)
        if undefined === category
          | 
        else
          | #{category.description}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg