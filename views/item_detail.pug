extends layout

block content
  div.item-detail-page
    div.image-container
        if item.profile_img
            img.item-page-img(src=item.profile_img, alt="item image")
        else 
            img.item-page-img(src="/images/placeholder.jpeg", alt="no image")
    div.info-cotainer
        div.title-container
            h1= item.name
            a.btn(href=`${item._id}/update`) Update 
            form(method='POST')
                div
                input(type='hidden', name='itemid', value=item._id )
                button.btn(type='submit') Delete
        p Description: #{item.description}
        a(href=item.category.url) #{item.category.name}
        p $#{item.price} 
        p Number in stock: #{item.number_in_stock}